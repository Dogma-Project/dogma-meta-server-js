{
  "name": "@dogma-project/headless-meta",
  "description": "Dogma headless app",
  "version": "0.9.1",
  "main": "./dist/export.js",
  "bin": "./dist/index.js",
  "types": "./types/export.d.ts",
  "scripts": {
    "start": "tsc && node ./dist/index.js",
    "dev": "tsc-watch --onSuccess 'node ./dist/index.js'",
    "dev:empty": "tsc-watch --onSuccess 'node ./dist/index.js'",
    "build": "tsc --build",
    "c:build": "rm -rf ./dist/* && rm -rf ./types/* && npm run build",
    "pkg": "tsc && pkg .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "Rotegott",
    "email": "rotegott@dogma-project.org",
    "url": "https://dogma-project.org/"
  },
  "homepage": "https://meta.dogma-project.org/",
  "keywords": [
    "dogma",
    "dogma meta",
    "dogma-headless",
    "decentralization",
    "p2p"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dogma-Project/dogma-meta-headless-js"
  },
  "bugs": {
    "url": "https://github.com/Dogma-Project/dogma-meta-headless-js/issues",
    "email": "rotegott@dogma-project.org"
  },
  "dependencies": {
    "@dogma-project/core-meta": "^0.9.14",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "pkg": "^5.8.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.2"
  },
  "pkg": {
    "outputPath": "./build",
    "targets": [
      "node20-linux",
      "node20-win",
      "node20-macos"
    ],
    "assets": [
      "./dist/public/",
      "./dist/public/*/**"
    ]
  }
}
